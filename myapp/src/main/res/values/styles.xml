<resources>

    <!-- Base application AppCompat theme. -->
    <style name="AppTheme" parent="BaseTheme" />

    <!-- Base theme -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--  color for status bar -->
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <!--  color for action bar -->
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <!--  color for component, like EditText, CheckBox etc. -->
        <item name="colorAccent">@android:color/holo_blue_bright</item>
    </style>

    <!-- no action bar theme -->
    <style name="NoActionBarTheme" parent="BaseTheme">
        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- full screen theme -->
    <style name="FullScreenTheme" parent="BaseTheme">
        <!-- full screen -->
        <item name="android:windowFullscreen">true</item>
        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- common custom item -->
    <style name="CommonCustomTheme">
        <!--  color for status bar -->
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <!--  color for action bar -->
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <!--  color for component, like EditText, CheckBox etc. -->
        <item name="colorAccent">@android:color/holo_blue_bright</item>

        <!-- only support for api 19 -->
        <!-- translucent for status bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- translucent for navigation -->
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- overlay mode -->
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- full screen -->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
