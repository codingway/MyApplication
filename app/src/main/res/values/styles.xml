<resources>

    <!-- Base application AppCompat theme. -->

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <!-- AppCompat theme for dark -->
    <style name="AppCompatDarkTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <!-- AppCompat theme for light -->
    <style name="AppCompatLightTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <!-- AppCompat theme for light with a dark action bar -->
    <style name="AppCompatLightWithDarkActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- common custom item -->
    <style name="CommonCustomTheme">
        <!--  color for status bar -->
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <!--  color for action bar -->
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <!--  color for component, like EditText, CheckBox etc. -->
        <item name="colorAccent">@android:color/holo_blue_bright</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- full screen -->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
